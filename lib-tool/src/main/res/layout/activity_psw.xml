<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    >
	<TextView
        android:id="@+id/tv_enterPswTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/pay_password_txt"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />
    <com.tool.utils.view.PasswordInputView
        android:id="@+id/passwordInputView"
        android:layout_below="@id/tv_enterPswTitle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="25dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        app:pivBorderColor="#000000"
        app:pivBorderRadius="2dp"
        app:pivBorderWidth="10dp"
        app:pivPasswordColor="#333333"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="10dp" />

    
</RelativeLayout>
